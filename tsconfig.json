{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "lib": ["ES2022"],
      "outDir": "./dist",
      "strict": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["@cloudflare/workers-types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }